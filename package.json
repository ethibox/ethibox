{
  "name": "Ethibox",
  "homepage": "https://github.com/ethibox/ethibox/",
  "description": "Open-source web apps hoster",
  "version": "0.0.0-development",
  "author": "@johackim",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethibox/ethibox"
  },
  "bugs": {
    "url": "https://github.com/ethibox/ethibox/issues"
  },
  "keywords": [
    "ethibox",
    "hosting",
    "next.js",
    "react",
    "docker",
    "stripe",
    "portainer",
    "tailwindcss",
    "open-source"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "rollup -c --bundleConfigAsCjs",
    "start": "next start",
    "start:cron": "node lib/cron.cjs",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "cypress run",
    "test:unit": "jest --forceExit -i __tests__/unit/*.spec.js",
    "test:ci": "concurrently -k -s first \"npm run dev\" \"npm run test\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@johackim/design-system": "1.31.2",
    "@sentry/nextjs": "^7.120.3",
    "bcrypt": "^5.1.1",
    "cron": "^2.4.4",
    "dotenv": "^16.4.7",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mariadb": "^3.4.0",
    "next": "~13.5.8",
    "prom-client": "^14.2.0",
    "react-confetti": "^6.2.3",
    "react-i18next": "^12.3.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7",
    "stripe": "^12.18.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.26.9",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^8.2.2",
    "cypress": "^12.17.4",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-jsconfig": "^1.1.0",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "esm-wallaby": "^3.2.32",
    "i18next": "^22.5.1",
    "jest": "^29.7.0",
    "jose": "^4.15.9",
    "nock": "^13.5.6",
    "postcss": "^8.5.3",
    "puppeteer": "^24.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-use": "^17.6.0",
    "rollup": "^3.29.5",
    "tailwindcss": "^3.4.17"
  },
  "jest": {
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "configFile": "./__tests__/unit/babel.config.js"
        }
      ]
    },
    "restoreMocks": true,
    "transformIgnorePatterns": [],
    "moduleNameMapper": {
      "^@lib(.*)$": "<rootDir>/lib/$1",
      "^@api(.*)$": "<rootDir>/pages/api/$1"
    }
  },
  "release": {
    "tagFormat": "${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
